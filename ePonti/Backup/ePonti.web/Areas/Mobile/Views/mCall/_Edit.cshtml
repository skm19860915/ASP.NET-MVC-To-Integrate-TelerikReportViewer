@model ePonti.web.Models.CallModels.NewCall

@{
    ViewBag.Title = "Edit Call Info";
    Layout = "~/Areas/Mobile/Views/Shared/_FormLayout.cshtml";
    Layout = null;

    var dateString = (Model.Date.HasValue ? Model.Date.Value.ToString("yyyy-MM-dd hh:mm tt") : "");
}

<div class="container-fluid" id="editableView">
    <div class="col-xs-12 pageHeader">
        <div class="col-xs-8 homeMenuText">@ViewBag.Title</div>
        <div>
            <a href="#" class="homeLinks save-call"><img src="~/images/Save.png" width="20"></a>
            <span><a href="javascript:closeEdit()" class="homeLinks"><img src="~/images/Cancel.png" width="20"></a></span>
        </div>
    </div>
    <div class="col-xs-offset-1 col-xs-11 container-fluid">
        @using (Html.BeginForm("create", "mcall", FormMethod.Post, htmlAttributes: new { @class = "form-horizontal", id = "main-form" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(p => p.CallID)
            <div class="form-group">
                <div class="headerText"></div>
            </div>
            <div class="col-xs-offset-1 custom-font">
                @Html.ValidationSummary()
                <div class="main-form-alert alert soft-hide"></div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-xs-3 formLabelTextMobile">Subject</div>
                </div>
                <div class="col-xs-11 formFeildText">
                    @Html.TextBoxFor(p => p.Subject, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-xs-3 formLabelTextMobile">Contact</div>
                </div>
                <div class="col-xs-11 formFeildText">
                    @Html.DropDownListFor(p => p.ContactID, ViewBag.Contacts as SelectList, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-xs-3 formLabelTextMobile">Phone</div>
                </div>
                <div class="col-xs-7 formFeildText">
                    @Html.TextBoxFor(p => p.Phone, new { @class = "form-control phone format-phone" })
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-xs-3 formLabelTextMobile">Mobile</div>
                </div>
                <div class="col-xs-7 formFeildText">
                    @Html.TextBoxFor(p => p.Mobile, new { @class = "form-control mobile format-phone" })
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-xs-3 formLabelTextMobile">Job</div>
                </div>
                <div class="col-xs-11 formFeildText">
                    @Html.DropDownListFor(p => p.JobID, ViewBag.Jobs as SelectList, new { @class = "form-control jobs" })
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-xs-3 formLabelTextMobile">Status</div>
                </div>
                <div class="col-xs-9 formFeildText">
                    @Html.DropDownListFor(p => p.StatusID, ViewBag.Status as SelectList, new { @class = "form-control status" })
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-xs-3 formLabelTextMobile">Purpose</div>
                </div>
                <div class="col-xs-9 formFeildText">
                    @Html.DropDownListFor(p => p.PurposeID, ViewBag.Purpose as SelectList, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-xs-3 formLabelTextMobile">Date</div>
                </div>
                <div class="col-xs-7 formFeildText">
                    @Html.TextBoxFor(p => p.Date, new { @class = "form-control datetime-picker", data_value = dateString })
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-xs-3 formLabelTextMobile">Duration</div>
                </div>
                <div class="col-xs-5 formFeildText">
                    @Html.TextBoxFor(p => p.Duration, new { @class = "form-control number-spinner", })
                </div>
                <div class="formFeildText">
                    <label class="col-xs-2 formLabelTextMobile">hours</label>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-xs-3 formLabelTextMobile">Resource</div>
                </div>
                <div class="col-xs-9 formFeildText">
                    @Html.DropDownListFor(p => p.ResourceID, ViewBag.Resources as SelectList, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-xs-3 formLabelTextMobile">Notes</div>
                </div>
                <div class="col-xs-11 formFeildText">
                    @Html.TextAreaFor(p => p.Notes, new { @class = "form-control", row = "10" })
                </div>
            </div>
            <div class="form-group">
                <div class="headerText"></div>
            </div>
        }
    </div>
</div>
