@model ePonti.web.Models.TimeItModels.NewTimeIt

@{
    ViewBag.Title = "Edit TimeIt Info";
    ViewBag.FormAction = "edit";
    Layout = null;
    ViewBag.dateString = (Model.Date.HasValue ? Model.Date.Value.ToString("yyyy-MM-dd hh:mm tt") : "");
}

<div class="container-fluid" id="editableView">
    <div class="col-xs-12 col-sm-12 pageHeader">
        <div class="col-xs-9 col-sm-11 homeMenuText">@ViewBag.Title</div>
        <div>
            <a href="#" class="homeLinks save-timeit"><img src="~/images/Save.png" width="20"></a>
            <span><a onclick="closeEdit()" class="homeLinks"><img src="~/images/Cancel.png" width="20"></a></span>
        </div>
    </div>
    @Html.Partial("_MainForm", Model)
</div>
