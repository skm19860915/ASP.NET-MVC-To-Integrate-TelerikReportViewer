@model ePonti.web.Models.STFileModel

@{
    ViewBag.Title = "Salez Toolz Files";
    Layout = "~/Areas/Common/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="col-sm-12 pageHeader">
        <div class="col-sm-10 homeMenuText">@ViewBag.Title</div>
        <div>
            <a href="#" class="homeLinks update-items"><img src="~/images/Save.png" width="20"></a>
            <span><a href="@Url.ActionPrev()" class="homeLinks"><img src="~/images/Cancel.png" width="20"></a></span>
        </div>
    </div>
    <div class="row">
        <div class="headerText"></div>
    </div>
    @if (ViewBag.SyncSuccessMessage != null)
    {
        <div class="row">
            <div class="col-sm-11">
                @if (ViewBag.IsSuccess == true)
                {
                    <div class="alert alert-success" role="alert" style="margin-top:60px">
                        <strong>Well done!</strong> @ViewBag.SyncSuccessMessage
                    </div>
                }
                else
                {
                    <div class="alert alert-danger" role="alert" style="margin-top:60px">
                        <strong>Oops!</strong> @ViewBag.SyncSuccessMessage
                    </div>
                }
            </div>
        </div>
    }
    <div class="row">
        <div class="col-sm-11 list-group">
            @if (ViewBag.SessionList != null && ViewBag.SessionList.Count > 0)
            {
                <table class="table table-hover grids">
                    <tr>
                        <th>File Id</th>
                        <th>FIle Name</th>
                    </tr>
                    @foreach (ePonti.web.Models.STSessionModel item in ViewBag.SessionList)
                    {
                        <tr>
                            <td class="action">
                                <a href="@Url.Action("stsync", "quotes", new { area = "sections", fileid = item.fileId })">@item.fileId</a>
                            </td>
                            <td class="subText">@item.fileName</td>
                        </tr>
                    }
                </table>
            }
        </div>
    </div>
</div>



