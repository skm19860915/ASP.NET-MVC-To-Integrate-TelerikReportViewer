@model ePonti.web.Models.CaseModels.NewCase

@using (Html.BeginForm((string)ViewBag.FormAction, "mcase", FormMethod.Post, htmlAttributes: new { @class = "form-horizontal", id = "main-form" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(p => p.CaseID)
    <div class="form-group">
        <div class="headerText"></div>
    </div>
    <div class="col-xs-offset-1 custom-font">
        @Html.ValidationSummary()
        <div class="main-form-alert alert soft-hide"></div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-xs-3 formLabelTextMobile">Job</div>
        </div>
        <div class="col-xs-11 formFeildText">
            @Html.DropDownListFor(p => p.JobID, ViewBag.Jobs as SelectList, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-xs-3 formLabelTextMobile">Type</div>
        </div>
        <div class="col-xs-7 formFeildText">
            @Html.DropDownListFor(p => p.TypeID, ViewBag.CaseTypes as SelectList, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-xs-3 formLabelTextMobile">Concern</div>
        </div>
        <div class="col-xs-11 formFeildText">
            @Html.TextBoxFor(p => p.Concern, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-xs-3 formLabelTextMobile">Priority</div>
        </div>
        <div class="col-xs-6 formFeildText">
            @Html.DropDownListFor(p => p.Priority, ViewBag.Priorities as SelectList, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-xs-3 formLabelTextMobile">Status</div>
        </div>
        <div class="col-xs-8 formFeildText">
            @Html.DropDownListFor(p => p.StatusID, ViewBag.Status as SelectList, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-xs-3 formLabelTextMobile">Created</div>
        </div>
        <div class="col-xs-6 formFeildText">
            @Html.TextBoxFor(p => p.Created, new { @class = "form-control date-picker", data_value = @ViewBag.CreatedString, id = "created" })
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-xs-3 formLabelTextMobile">Due</div>
        </div>
        <div class="col-xs-6 formFeildText">
            @Html.TextBoxFor(p => p.Due, new { @class = "form-control date-picker", data_value = @ViewBag.DueString, id = "due" })
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-xs-3 formLabelTextMobile">Resource</div>
        </div>
        <div class="col-xs-8 formFeildText">
            @Html.DropDownListFor(p => p.ResourceID, ViewBag.Resource as SelectList, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-xs-3 formLabelTextMobile">Creator</div>
        </div>
        <div class="col-xs-8 formFeildText">
            @Html.DropDownListFor(p => p.CreatorID, ViewBag.Creator as SelectList, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col-xs-3 formLabelTextMobile">Notes</div>
        </div>
        <div class="col-xs-11 formFeildText">
            @Html.TextAreaFor(p => p.Notes, new { @class = "form-control", row = "10" })
        </div>
    </div>
    <div class="form-group">
        <div class="headerText"></div>
    </div>

}
