@model ePonti.web.Models.TimeItModels.NewTimeIt

@using (Html.BeginForm((string)ViewBag.FormAction, "timeits", FormMethod.Post, htmlAttributes: new { @class = "form-horizontal", id = "main-form" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(p => p.TimeItID)
    @*if(ViewBag.PayrollPeriodItemID!=null)
    {
        <input type="hidden" value="@ViewBag.PayrollPeriodItemID" name="PayrollPeriodItemID" id="PayrollPeriodItemID" />
    }*@
    <div class="form-group">
        <div class="headerText"></div>
    </div>
    <div class="col-xs-offset-1 col-sm-offset-1 custom-font">
        @Html.ValidationSummary()
        <div class="main-form-alert alert soft-hide"></div>
    </div>
        <div class="form-group">
            <div class="col-xs-2 col-sm-2 control-label formLabelText">Job</div>
            <div class="col-xs-9 col-sm-6 formFeildText">
                @Html.DropDownListFor(p => p.ProjectID, ViewBag.Jobs as SelectList, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-xs-2 col-sm-2 control-label formLabelText">Task</div>
            <div class="col-xs-9 col-sm-7 formFeildText">
                @Html.TextBoxFor(p => p.Task, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-xs-2 col-sm-2 control-label formLabelText">Resource</div>
            <div class="col-xs-9 col-sm-4 formFeildText">
                @Html.DropDownListFor(p => p.ResourceID, ViewBag.Resource as SelectList, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-xs-2 col-sm-2 control-label formLabelText">Stage</div>
            <div class="col-xs-9 col-sm-4 formFeildText">
                @Html.DropDownListFor(p => p.StageID, ViewBag.Stages as SelectList, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-xs-2 col-sm-2 control-label formLabelText">Pay Type</div>
            <div class="col-xs-9 col-sm-4 formFeildText">
                @Html.DropDownListFor(p => p.PaytypeID, ViewBag.PayTypes as SelectList, new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-xs-2 col-sm-2 control-label formLabelText">Date</div>
            <div class="col-xs-9 col-sm-3 formFeildText">
                @Html.TextBoxFor(p => p.Date, new { @class = "form-control datetime-picker", data_value = ViewBag.dateString })
            </div>
        </div>
        <div class="form-group">
            <div class="col-xs-2 col-sm-2 control-label formLabelText">Hours</div>
            <div class="col-xs-9 col-sm-2 formFeildText">
                @Html.TextBoxFor(p => p.Hours, new { @class = "form-control number-spinner" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-xs-2 col-sm-2 control-label formLabelText">Note</div>
            <div class="col-xs-9 col-sm-9 formFeildText">
                <textarea class="form-control" rows="10" id="callNoteId" name="callNote">@Model.Notes</textarea>
            </div>
        </div>
        <div class="row">
            <div class="headerText"></div>
        </div>
        <div class="row">
            <div class="headerText"></div>
        </div>
        <div class="row">
            <div class="headerText"></div>
        </div>
        <div class="row">
            <div class="headerText"></div>
        </div>
        <div class="row">
            <div class="headerText"></div>
        </div>
}
