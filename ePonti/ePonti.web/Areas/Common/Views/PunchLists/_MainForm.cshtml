@model ePonti.web.Models.PunchListModels.NewPunchList

@using (Html.BeginForm((string)ViewBag.FormAction, "punchlists", FormMethod.Post, htmlAttributes: new { @class = "form-horizontal", id = "main-form" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(p => p.PunchListID)
    <div class="form-group">
        <div class="headerText"></div>
    </div>
    <div class="col-xs-offset-1 col-sm-offset-1 custom-font">
        @Html.ValidationSummary()
        <div class="main-form-alert alert soft-hide"></div>
    </div>
        <div class="form-group">
            <div class="col-xs-2 col-sm-2 control-label formLabelText">Job</div>
            <div class="col-xs-9 col-sm-7 formFeildText">
                @Html.DropDownListFor(p => p.JobID, ViewBag.Jobs as SelectList, new { @class = "form-control" })
            </div>
        </div>
    <div class="form-group">
        <div class="col-xs-2 col-sm-2 control-label formLabelText">Type</div>
        <div class="col-xs-4 col-sm-3 formFeildText">
            @Html.DropDownListFor(p => p.TypeID, ViewBag.Types as SelectList, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-xs-2 col-sm-2 control-label formLabelText">Description</div>
        <div class="col-xs-9 col-sm-7 formFeildText">
            @Html.TextBoxFor(p => p.Description, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-xs-2 col-sm-2 control-label formLabelText">Department</div>
        <div class="col-xs-9 col-sm-5 formFeildText">
            @Html.DropDownListFor(p => p.DepartmentID, ViewBag.Departments as SelectList, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-xs-2 col-sm-2 control-label formLabelText">Division</div>
        <div class="col-xs-9 col-sm-5 formFeildText">
            @Html.DropDownListFor(p => p.DivisionID, ViewBag.Divisions as SelectList, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-xs-2 col-sm-2 control-label formLabelText">Area</div>
        <div class="col-xs-9 col-sm-5 formFeildText">
            @Html.DropDownListFor(p => p.AreaID, ViewBag.Areas as SelectList, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-xs-2 col-sm-2 control-label formLabelText">Priority</div>
        <div class="col-xs-4 col-sm-3 formFeildText">
            @Html.DropDownListFor(p => p.PriorityID, ViewBag.Priorities as SelectList, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-xs-2 col-sm-2 control-label formLabelText">Status</div>
        <div class="col-xs-9 col-sm-3 formFeildText">
            @Html.DropDownListFor(p => p.StatusID, ViewBag.Status as SelectList, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-xs-2 col-sm-2 control-label formLabelText">Due</div>
        <div class="col-xs-9 col-sm-3 formFeildText">
            @Html.TextBoxFor(p => p.Due, new { @class = "form-control date-picker", data_value = @ViewBag.DateString, id = "due" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-xs-2 col-sm-2 control-label formLabelText">Hours</div>
        <div class="col-xs-9 col-sm-3 formFeildText">
            @Html.TextBoxFor(p => p.Hours, new { @class = "form-control number-spinner" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-xs-2 col-sm-2 control-label formLabelText">Creator</div>
        <div class="col-xs-9 col-sm-5 formFeildText">
            @Html.DropDownListFor(p => p.CreatorID, ViewBag.Creator as SelectList, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-xs-2 col-sm-2 control-label formLabelText">Note</div>
        <div class="col-xs-9 col-sm-9 formFeildText">
            <textarea class="form-control" rows="10" id="callNoteId" name="callNote">@Model.Notes</textarea>
        </div>
    </div>
        <div class="row">
            <div class="headerText"></div>
        </div>
        <div class="row">
            <div class="headerText"></div>
        </div>
        <div class="row">
            <div class="headerText"></div>
        </div>
        <div class="row">
            <div class="headerText"></div>
        </div>
        <div class="row">
            <div class="headerText"></div>
        </div>
}
