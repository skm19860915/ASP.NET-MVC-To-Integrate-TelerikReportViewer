@model ePonti.web.Models.InviteUserModel
@{
    ViewBag.Title = "Invite User";

    Layout = "~/Areas/Common/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="container">
        <div class="col-sm-12 pageHeader">
            <div class="col-sm-11 homeMenuText">@ViewBag.Title</div>
            <div>
                <span><a href="@Request.UrlReferrer" class="homeLinks"><img src="~/images/Cancel.png" width="20"></a></span>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-offset-1 tabText">
                <div class="headerText"></div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-offset-1 tabText">
                Fill out the information below:
            </div>
        </div>
        <div class="row">
            <div class="headerText"></div>
        </div>
        <div class="row">
            @using (Html.BeginForm("Invite", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <div class="col-sm-7">
                    <section id="loginForm">
                        <div class="row"></div>
                        <div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.FirstName, new { @class = "col-sm-3 col-lg-3 control-label formLabelText" })
                                <div class="col-sm-9">
                                    @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control formFeildText" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.LastName, new { @class = "col-sm-3 col-lg-3 control-label formLabelText" })
                                <div class="col-sm-9">
                                    @Html.TextBoxFor(m => m.LastName, new { @class = "form-control formFeildText" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Email, new { @class = "col-sm-3 col-lg-3 control-label formLabelText" })
                                <div class="col-sm-9">
                                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control formFeildText" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(m => m.Phone, new { @class = "col-sm-3 col-lg-3 control-label formLabelText" })
                                <div class="col-sm-6">
                                    @Html.TextBoxFor(m => m.Phone, new { @class = "form-control formFeildText" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label formLabelText">License</label>
                                <div class="col-sm-5">
                                    @Html.DropDownList("CoLicense", ViewBag.Licenses as SelectList, new { @class = "form-control formFeildText" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-3 control-label formLabelText">Security Profile</label>
                                <div class="col-sm-5">
                                    @Html.DropDownList("CoProfile", ViewBag.Profiles as SelectList, new { @class = "form-control formFeildText" })
                                </div>
                            </div>
                            <div class="row">
                                <div class="tabText">
                                    <div class="headerText"></div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-offset-9 col-sm-3 dropdown buttons">
                                    <input type="submit" class="btn btn-default" value="Invite" />
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="col-sm-10">
                                    @Html.ValidationSummary("", new { @class = "text-danger" })
                                    @if (Model.IsInvitationSent)
                                    {
                                        <span class="alert alert-success">Invitation sent!</span>
                                    }
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
